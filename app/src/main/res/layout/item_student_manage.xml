<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/materialCardViewStyle"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="16dp"
android:gravity="center_vertical">

<ImageView
    android:id="@+id/ivStudentIconManageItem"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/student"
android:layout_marginEnd="16dp"
android:contentDescription="Student Icon"/>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvStudentNameManageItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Student Name Placeholder"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvParentNameManageItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Parent: Parent Name Placeholder"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="4dp"
        android:visibility="gone"
    tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvParentMobileManageItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mobile: +91XXXXXXXXXX"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="2dp"
        android:visibility="gone"
    tools:visibility="visible"/>
</LinearLayout>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>