<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".TakeAttendanceFragment">

    <!-- The AppBarLayout and Toolbar are now in TeacherOptionsActivity -->
    <!-- The app:layout_behavior from the original ConstraintLayout is not needed
         if this ConstraintLayout is the root of the fragment. -->

    <LinearLayout
        android:id="@+id/header_info_container_frag_att"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="12dp"
    android:background="?attr/colorSurface"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/tvClassNameAttendanceFrag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp" android:visibility="gone"
    tools:text="Class: Hifz - Section A"
    android:textAppearance="?attr/textAppearanceHeadlineSmall"
    android:textColor="?attr/colorOnSurface"
    android:layout_marginBottom="4dp"/>

    <!-- LinearLayout to hold Date TextView and Change Date Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAttendanceDateFrag"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:text="Date: 2024-05-24"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnSurfaceVariant"/>

        <ImageButton
            android:id="@+id/btnChangeDateAttendanceFrag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_calendar"
        app:tint="?attr/colorPrimary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Change Attendance Date"
        android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>

<View
android:id="@+id/header_divider_frag_att"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:background="?attr/colorOutline"
    app:layout_constraintTop_toBottomOf="@id/header_info_container_frag_att"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recyclerViewStudentsAttendanceFrag"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="80dp"
    android:clipToPadding="false"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintTop_toBottomOf="@id/header_divider_frag_att"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:listitem="@layout/item_student_attendance"/>

<TextView
android:id="@+id/tvNoStudentsForAttendanceFrag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/no_students_in_class"
    android:textAppearance="?attr/textAppearanceBodyLarge"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:visibility="gone"
    android:padding="32dp"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/header_divider_frag_att"
    app:layout_constraintBottom_toTopOf="@+id/btnSaveAttendanceFrag"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:visibility="gone"/>

<ProgressBar
android:id="@+id/progressBarTakeAttendanceFrag"
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminateTint="?attr/colorPrimary"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/header_divider_frag_att"
    app:layout_constraintBottom_toTopOf="@+id/btnSaveAttendanceFrag"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:visibility="visible"/>

<com.google.android.material.button.MaterialButton
android:id="@+id/btnSaveAttendanceFrag"
    style="?attr/materialButtonStyle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/save_attendance"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:iconGravity="textStart"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>